{
  "name": "advent-of-code",
  "version": "1.0.0",
  "private": "true",
  "description": "it's christmas baby",
  "main": "index.js",
  "scripts": {
    "start": "sh -c 'ts-node src/${0}.ts'",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "postinstall": "husky install"
  },
  "keywords": [
    "code",
    "ts"
  ],
  "author": "pupoSDC",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.0",
    "ts-node": "^10.4.0",
    "lint-staged": "^12.1.2",
    "typescript": "^4.5.2"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "lint-staged": {
    "*": "prettier-write",
    ".ts": "eslint --fix"
  }
}
